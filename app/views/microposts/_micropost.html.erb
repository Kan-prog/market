<div class="micropost-wrapper" style="display:flex;">
  <% microposts.each do |micropost| %>  
    <div id="micropost-<%= micropost.id %>" style="flex-wrap:wrap-reverse;" >
      <div class="micropost">
        <% if micropost.picture? %>
          <div class="<%= "sold" if micropost.sold == true %>">
            <%= image_tag micropost.picture.url, class: "item-picture" %>
          </div>
        <% end %>  
        <div id="like_btn">
          <% if logged_in? %>
            <%= render 'microposts/like_form', micropost: micropost %>
          <% end %>
        </div> 
        <span class="timestamp">
          <%= time_ago_in_words(micropost.created_at) %>前
        </span>
        <div class="name">
          <%= link_to micropost.name, micropost_path(micropost.id) %>
        </div>
        <div class="price">
          ￥<%= micropost.price %>円～
        </div>
      </div>  
    </div>
  <% end %> 
</div>  