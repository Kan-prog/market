<div class="micropost-wrapper" style="display:flex;">
  <% microposts.each do |micropost| %>  
    <div id="micropost-<%= micropost.id %>" style="flex-wrap:wrap;" >
      <div class="micropost">
        <%= image_tag micropost.picture.url if micropost.picture? %>
        <% if logged_in? %>
          <%= render 'favorites/like_button', micropost: micropost %>
        <% end %>
        <div class="timestamp">
          <%= time_ago_in_words(micropost.created_at) %>前に出品
        </div>
        <div class="name">
          <%= link_to micropost.name, micropost_path(micropost.id) %>
        </div>
        <div class="price">
          ￥<%= micropost.price %>円～
        </div>
        <% if current_user?(micropost.user) %>
          <%= link_to "編集", edit_micropost_path(micropost) %>
          <%= link_to "取り消し", micropost, method: :delete,
                                           data: { confirm: "本当に取り消してよろしいですか？" } %>
        <% end %>
      </div>  
    </div>
  <% end %> 
</div>  