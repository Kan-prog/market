<h1><%= @micropost.name %>の商品詳細ページ</h1>
<div class="row">
  <div class="col-xs-12 col-md-8">
    <div class="item-info">
      <div class="item-img">
        <%= image_tag @micropost.picture.url if @micropost.picture? %>
      </div>
      <% if @micropost.user == current_user %>
        <% if @micropost.sold == false %>
          <%= form_for(@micropost, url: update_sold_micropost_path, html: { method: :put }) do |f| %>
            <%= hidden_field_tag :sold, true %>
            <%= f.submit "出品を締め切る", class: "btn btn-danger"%>
          <% end %>
        <% else %>
          <%= form_for(@micropost, url: update_sold_micropost_path, html: { method: :put }) do |f| %>
            <%= hidden_field_tag :sold, false %>
            <%= f.submit "締め切り解除", class: "btn btn-info"%>
          <% end %>
        <% end %>
      <% end %>
      <div class="name">
        商品名：<%= @micropost.name %>
      </div>
      <div class="genre">
        カテゴリー：<%= @micropost.genres.map{|genre| genre.name}.join(', ') %>
      </div>
      <div class="price">
        検討価格：<%= @micropost.price %>
      </div>
      <div class="cost">
        原価（税抜）：<%= @micropost.cost %>
      </div>
      <div class="content">
        商品説明：<%= @micropost.content %>
      </div>
      <% unless @micropost.user == current_user %>
        <% if @micropost.sold == false %>
          <%= link_to @micropost.user.name + "との相談ルームへ", user_messages_path(@micropost.user) %>
        <% else %>
          <%= @micropost.user.name %>との相談ルームは締め切られています。
        <% end %>
      <% end %>  
    </div>  
  </div>
  <div class="col-xs-12 col-md-4">
    <div class="user-info">
      <div class="user-img">
        <%= image_tag @micropost.user.picture.thumb.url class: "img-circle" %>
      </div>
      <div class="user-name">
        <%= link_to @micropost.user.name, user_path(@micropost.user_id) %>
      </div>
      
    </div>
  </div>
</div>