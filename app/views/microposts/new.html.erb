<h5>出品ページ</h5>
<div class="col-xs-12 col-sm-offset-4 col-sm-4">
  <%= render 'shared/error_messages', user: @micropost %>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@micropost, html: { multipart: true }) do |f| %>
      
      <div class="pictures col-xs-12 col-md-6">
        <div class="form-group">
          <%= f.label :picture %>
          <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', id: 'picture' %>
          <img id="preview" style="width: 60%;">
        </div>
        <div class="form-group">
        <%= f.label :picture_1 %>  
        <%= f.file_field :picture_1, accept: 'image/jpeg,image/gif,image/png', id: 'picture_1' %>
        <img id="preview_1" style="width: 80%;">
        </div>
        <div class="form-group">
        <%= f.label :picture_2 %>    
        <%= f.file_field :picture_2, accept: 'image/jpeg,image/gif,image/png', id: 'picture_2' %>
        <img id="preview_2" style="width: 80%;">
        </div>
        <div class="form-group">
        <%= f.label :picture_3 %>    
        <%= f.file_field :picture_3, accept: 'image/jpeg,image/gif,image/png', id: 'picture_3' %>
        <img id="preview_3" style="width: 80%;">
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "50字以内", class: 'form-control' %>
        
        <div class="form-group">
          <%= f.label :genres, class: 'control-label' %>
          <div class="checkbox">
            <%= collection_check_boxes(:micropost, :genre_ids, Genre.all.order(:name), :id, :name) do |b| %>
              <%= b.label { b.check_box + b.text } %>
            <% end %>
          </div>
        </div>  
  
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control' %>
  
        <%= f.label :cost %>
        <%= f.text_field :cost, class: 'form-control' %>
        
        <div class="field">
          <%= f.label :content %>
          <%= f.text_area :content, placeholder: "商品の状態・詳しい内容などを記述しましょう。500字以内", class: "form-control" %>
        </div>
        <%= button_tag :type => "submit", :class =>"btn btn-danger col-xs-12", data: { disable_with: "送信中..." } do %>
          出品する <i class="fa fa-plus"></i>
        <% end %>
      </div>
      
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
  
  $('#picture').on('change', function (e) {
    var reader = new FileReader();
    reader.onload = function (e) {
        $("#preview").attr('src', e.target.result);
    }
    reader.readAsDataURL(e.target.files[0]);
  });
  
  $('#picture_1').on('change', function (e) {
    var reader = new FileReader();
    reader.onload = function (e) {
        $("#preview_1").attr('src', e.target.result);
    }
    reader.readAsDataURL(e.target.files[0]);
  });
  
  $('#picture_2').on('change', function (e) {
    var reader = new FileReader();
    reader.onload = function (e) {
        $("#preview_2").attr('src', e.target.result);
    }
    reader.readAsDataURL(e.target.files[0]);
  });
  
  $('#picture_3').on('change', function (e) {
    var reader = new FileReader();
    reader.onload = function (e) {
        $("#preview_3").attr('src', e.target.result);
    }
    reader.readAsDataURL(e.target.files[0]);
  });
  
</script>





