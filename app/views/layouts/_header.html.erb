<header class="navbar navbar-fixed-top">
  <div class="container-fluid">
    <%= link_to image_tag("tradents-logo.jpg") , root_path, id: "logo" %>
    <nav>
        <% if logged_in? %>
            <ul class="g-nav">
              <li class="mypage"><%= link_to "マイページ", user_path(current_user) %></li>
              <li class="search"><a href="#" data-toggle="modal" data-target="#sampleModal">検索</a></li>
              <li class="plus"><%= link_to "出品", new_micropost_path %></li>
              <li class="bell">
                <%= link_to "お知らせ", notifications_path %>
                <% if unchecked_notifications.any? %>
                  <i class="fa fa-circle notification-circle" style="color:blue"></i>
                <% end %>
              </li>
              <li class="mail">
                <%= link_to "メッセージ", your_message_user_messages_path(current_user.id) %>
              </li>
            </ul>
        <% else %>
          <ul class="g-nav">
            <li class="search"><a href="#" data-toggle="modal" data-target="#sampleModal">検索</a></li>
            <li class="login"><%= link_to "ログイン",login_path %></li>
            <li class="signup"><%= link_to "会員登録", signup_path %></li>
          </ul>  
        <% end %>
    </nav>
  </div>
</header>
