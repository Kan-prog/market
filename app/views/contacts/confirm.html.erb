<%= form_for @contact, :url => contact_done_path do |f| %>
  <div>
    <h5>お問い合わせ内容確認</h5>
    <div>
      <strong>名前</strong>
      <p>
        <%= f.hidden_field :name %>
        <%= @contact.name %>
      </p>
    </div>
    <div>
      <strong>メールアドレス</strong>
      <p>
        <%= f.hidden_field :email %>
        <%= @contact.email %>
      </p>
    </div>
    <div>
      <strong>内容</strong>
      <p>
        <%= f.hidden_field :content %>
        <%= simple_format(@contact.content) %>
      </p>
    </div>
      <%= f.submit '戻る', name: 'back', :class =>"btn btn-info" %>
      <%= f.submit '送信する', :class =>"btn btn-info" %>
  </div>
<% end %>